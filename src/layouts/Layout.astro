---
import { Navbar } from '../components/home';
import { Footer } from '../components/home';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Acme Note - Take a Note. Faster. Better.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <!-- Primary Meta Tags -->
    <meta name="title" content="Acme Note. - Take a Note." />
    <meta
      name="description"
      content="With the all new Note. app, only your imagination is the limitation!"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://metatags.io/" />
    <meta property="og:title" content="Acme Note. - Take a Note." />
    <meta
      property="og:description"
      content="With the all new Note. app, only your imagination is the limitation!"
    />
    <meta property="og:image" content="https://metatags.io/images/meta-tags.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://metatags.io/" />
    <meta property="twitter:title" content="Acme Note. - Take a Note." />
    <meta
      property="twitter:description"
      content="With the all new Note. app, only your imagination is the limitation!"
    />
    <!-- TODO: update image path from github readme -->
    <meta property="twitter:image" content="https://metatags.io/images/meta-tags.png" />

    <!-- Meta Tags Generated with https://metatags.io -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-midnight">
    <Navbar client:load />
    <slot />
    <Footer />
  </body>
</html>
